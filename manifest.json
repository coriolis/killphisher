{
  "manifest_version": 2,

  "name": "KillPhisher",
  "description": "Zero-day phishing protection",
  "version": "0.1.0",
  "browser_action": {
    "default_icon": "assets/icons/icon24.png",
    "default_popup": "popup.html",
    "default_title": "KillPhisher"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "options_page":"option.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css":["css/content.css", "css/material-dialog.css", "css/iconfont/material-icons.css", "externalCode/jquery.Jcrop.min.css"],
      "js": [
        "externalCode/jquery/jquery-1.12.4.min.js",
        "externalCode/jquery.Jcrop.min.js",
        "whitelist.js",
        "utils.js",
        "content.js",
        "dialog.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
        "assets/defaults/pattern.js",
        "whitelist.js",
        "externalCode/idbstore.min.js",
        "utils.js",
        "screenshot.js",
        "background.js",
        "orb-features.js",
        "externalCode/jsfeat.js"
      ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://*/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "assets/img/*",
    "assets/icons/*",
    "assets/fonts/*",
    "images/*",
    "css/iconfont/*",
    "assets/defaults/*",
    "option.html"
  ]
}
