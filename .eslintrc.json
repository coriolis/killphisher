{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double",
            {"allowTemplateLiterals": true}
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
           "error", {"vars": "local", "args": "none", "ignoreRestSiblings": true} 
        ],
        "no-console": 0,
        "keyword-spacing": [
            "error", { "before": true, "after": true }
        ]
    },
    "globals": {
        "$": false,
        "chrome": false,
        "coverContainer": false,
        "DEFAULT_IMG": false,
        "updateImage": false,
        "assert": false,
        "ajax_get": false,
        "crop": false,
        "findOrbFeatures": false,
        "matchOrbFeatures": false,
        "stripQueryParams": false,
        "getPathInfo": false,
        "createPatterns": false,
        "skipDomains": true,
        "IDBStore": false,
        "redFlagSites": true,
        "isSpecialTab": false,
        "jsfeat": false,
        "defPatterns": false,
        "debug": false,
        "dialog": false,
        "findCorrespondence": false,
        "getUrlVars": false,
        "injectAckModal": false,
        "defaultFeeds": false,
        "_": false,
        "CryptoJS": false,
        "DEBUG": true,
        "psl": false,
        "Sites": false,
        "Pdb": false
    }
}
